# AI Dev Tool Environment Variables Example
# Copy this file to .env and configure your settings

# AI Model Settings
AI_DEFAULT_MODEL=gemini
AI_GEMINI_COMMAND=gemini
AI_CLAUDE_COMMAND=claude-code

# Output Settings
OUTPUT_ENCODING=shift-jis
OUTPUT_FORMAT=markdown
OUTPUT_DIRECTORY=./output

# Gemini Settings (if using Gemini CLI)
GEMINI_MODEL=gemini-2.5-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# Claude Settings (if using Claude CLI)
CLAUDE_MODEL=claude-opus-4
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=8192

# Development Settings
DEBUG=false
VERBOSE=false